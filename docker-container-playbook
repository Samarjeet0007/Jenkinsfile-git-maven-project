- hosts: ec2_server
  remote_user: root
  become: yes
  - tasks:
    name: installing pip for docker-py
      yum:
        name: python-pip
        state: installed
    name: installing docker-py for docker_container binary
      pip:
        name: docker-py
        state: present
    name: deploying container
      docker_container:
        name: warfromjenkins
        image: "996622/warfromjenkins:{{ docker_tag }}"
        state: started
        published_ports:
          0.0.0.0:8080:8080
